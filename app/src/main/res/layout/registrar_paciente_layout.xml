<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/clinicaDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrarse"
            android:textColor="@color/letraDark"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="30dp"
            />
        <Space
            android:layout_width="match_parent"
            android:layout_height="4dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombres"
            android:textColor="@color/letraDark"
            android:textStyle="bold"
            android:textSize="20dp"
            />
        <Space
            android:layout_width="match_parent"
            android:layout_height="4dp"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/input_layout_crear_nombre"
            android:hint="Ingrese Nombres"
            app:hintEnabled="true"
            app:hintAnimationEnabled="true"
            app:boxStrokeColor="@color/black"
            android:layout_gravity="center">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:background="@drawable/custom_edittext"
                android:id="@+id/txtCrearNombre"
                android:inputType="text"
                android:text=""/>
        </com.google.android.material.textfield.TextInputLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apellidos"
            android:textColor="@color/letraDark"
            android:textStyle="bold"
            android:textSize="20dp"
            />
        <Space
            android:layout_width="match_parent"
            android:layout_height="4dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/input_layout_crear_apellidos"
            android:hint="Ingrese Apellidos"
            app:hintEnabled="true"
            app:hintAnimationEnabled="true"
            app:boxStrokeColor="@color/black"
            android:layout_gravity="center">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:background="@drawable/custom_edittext"
                android:id="@+id/txtCrearApellidos"
                android:inputType="text"
                android:text=""/>
        </com.google.android.material.textfield.TextInputLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/letraDark"
            android:textStyle="bold"
            android:textSize="20dp"
            />
        <Space
            android:layout_width="match_parent"
            android:layout_height="4dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/input_layout_crear_email"
            android:hint="example@hotmail.com"
            app:hintEnabled="true"
            app:hintAnimationEnabled="true"
            app:boxStrokeColor="@color/black"
            android:layout_gravity="center">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:background="@drawable/custom_edittext"
                android:id="@+id/txtCrearEmail"
                android:inputType="text"
                android:text=""/>
        </com.google.android.material.textfield.TextInputLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de Documento"
            android:textColor="@color/letraDark"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="4dp"/>

        <Spinner
            android:id="@+id/spinnerTipoDocumento"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/custom_edittext"
            android:backgroundTint="@color/white"
            android:entries="@array/tipos_documento"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Número de Documento"
            android:textColor="@color/letraDark"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="4dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/input_layout_crear_documento"
            android:hint="Numero de documento"
            app:hintEnabled="true"
            app:hintAnimationEnabled="true"
            app:boxStrokeColor="@color/black"
            app:boxStrokeWidthFocused="@dimen/cardview_default_elevation"
            android:layout_gravity="center">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:background="@drawable/custom_edittext"
                android:id="@+id/txtCrearDocumento"
                android:inputType="number"
                android:maxLength="15"
                android:text=""/>
        </com.google.android.material.textfield.TextInputLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha de Nacimiento"
            android:textColor="@color/letraDark"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="4dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/input_layout_fecha_nacimiento"
            android:hint="Fecha de Nacimiento"
            app:startIconDrawable="@drawable/ic_calendar"
            app:boxStrokeColor="@color/black"
            android:layout_gravity="center">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:background="@drawable/custom_edittext"
                android:id="@+id/txtFechaNacimiento"
                android:focusable="false"
                android:text=""/>
        </com.google.android.material.textfield.TextInputLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teléfono"
            android:textColor="@color/letraDark"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="4dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/input_layout_telefono"
            android:hint="Ingrese Teléfono"
            app:hintEnabled="true"
            app:hintAnimationEnabled="true"
            app:boxStrokeColor="@color/black"
            app:startIconDrawable="@drawable/ic_telefono"
            android:layout_gravity="center">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"

                android:background="@drawable/custom_edittext"
                android:id="@+id/txtTelefono"
                android:inputType="number"
                android:maxLength="9"
                android:text=""/>
        </com.google.android.material.textfield.TextInputLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/btnRegistrar"
            android:text="Registrar"
            android:textSize="18sp"
            android:backgroundTint="@color/letraDark"
            android:textColor="@color/black"
            app:cornerRadius = "20dp"/>
    </LinearLayout>

</RelativeLayout>