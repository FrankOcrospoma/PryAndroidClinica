<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/layoutCitaProgramada"
            android:foreground="?attr/selectableItemBackground"
            android:background="@color/letraDark">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:paddingTop="10sp"
                android:background="@android:color/transparent"
                android:src="@drawable/cita_programada"
                android:scaleType="fitCenter"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver citas programadas"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:paddingTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="@color/letraDark"
                android:id="@+id/layoutAgregarCita"
                android:foreground="?attr/selectableItemBackground">

                <ImageButton
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:paddingTop="10sp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/agregar_cita"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agregar cita"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/letraDark"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/layoutVerCitas"
                android:foreground="?attr/selectableItemBackground">

                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:paddingTop="10sp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ver_cita"
                    android:scaleType="fitCenter" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver citas"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/layoutReprogramar"
            android:foreground="?attr/selectableItemBackground"
            android:background="@color/letraDark">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:paddingTop="10sp"
                android:background="@android:color/transparent"
                android:src="@drawable/reprogramar"
                android:scaleType="fitCenter"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reprogramar o cancelar citas"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>


        <LinearLayout
            android:paddingTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="@color/letraDark"
                android:id="@+id/layoutPagar"
                android:foreground="?attr/selectableItemBackground">
                <ImageButton
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:paddingTop="10sp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/pagar"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pagar"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/letraDark"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/layoutEquipoMedico"
                android:foreground="?attr/selectableItemBackground">
                <ImageButton
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:paddingTop="10sp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/equipo_medico"
                    android:scaleType="fitCenter"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ver Especialistas"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>