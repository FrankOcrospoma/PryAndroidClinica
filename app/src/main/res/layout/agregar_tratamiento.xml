<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/clinicaDark"
    tools:context=".AgregarTratamientoFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar nuevo Tratamiento"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:padding="16dp"
        android:textStyle="bold"
        android:textColor="@color/WhiteSmoke" />

    <EditText
        android:id="@+id/inputNombreTratamiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre Tratamiento"
        android:inputType="text"
        android:padding="8dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edittext_background"
        android:textColor="@color/WhiteSmoke"
        android:textColorHint="@color/WhiteSmoke"
        android:drawablePadding="8dp"/>

    <EditText
        android:id="@+id/inputDescripcionTratamiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="DescripciÃ³n"
        android:inputType="text"
        android:padding="8dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edittext_background"
        android:textColor="@color/WhiteSmoke"
        android:textColorHint="@color/WhiteSmoke"
        android:drawablePadding="8dp"/>

    <EditText
        android:id="@+id/inputCostoTratamiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Costo"
        android:inputType="numberDecimal"
        android:padding="8dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edittext_background"
        android:textColor="@color/WhiteSmoke"
        android:textColorHint="@color/WhiteSmoke"
        android:drawablePadding="8dp"/>



    <Button
        android:id="@+id/btnGuardarTratamiento"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Guardar Tratamiento"
        android:backgroundTint="@color/letraDark"
        android:textColor="@color/letraBtnDark"
        android:textSize="18dp"
        android:layout_marginTop="16dp" />
</LinearLayout>
