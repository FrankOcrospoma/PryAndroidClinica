<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/Silver">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verificación de Email"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Ingrese su código enviado a su email:"
                android:textSize="14sp"
                android:layout_marginEnd="20dp"/>

            <TextView
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="60"
                android:textSize="14sp"
                android:layout_marginEnd="10dp"/>

            <ImageButton
                android:id="@+id/refreshButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_refresh"
                android:background="?attr/selectableItemBackgroundBorderless"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/digito1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:inputType="number"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:maxLength="1"
                android:background="@color/white"
                android:layout_marginEnd="10dp"/>

            <EditText
                android:id="@+id/digito2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:inputType="number"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:maxLength="1"
                android:background="@color/white"
                android:layout_marginEnd="10dp"/>

            <EditText
                android:id="@+id/digito3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:inputType="number"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:maxLength="1"
                android:background="@color/white"
                android:layout_marginEnd="10dp"/>

            <EditText
                android:id="@+id/digito4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:inputType="number"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:maxLength="1"
                android:background="@color/white"
                android:layout_marginEnd="10dp"/>
            <EditText
                android:id="@+id/digito5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:inputType="number"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:maxLength="1"
                android:background="@color/white"
                android:layout_marginEnd="10dp"/>
            <EditText
                android:id="@+id/digito6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:inputType="number"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:maxLength="1"
                android:background="@color/white"
                android:layout_marginEnd="10dp"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/btnValidar"
            android:text="Continuar"
            android:textSize="18sp"
            android:backgroundTint="@color/SteelBlue"
            app:cornerRadius = "20dp"/>

    </LinearLayout>
    </LinearLayout>
    </RelativeLayout>

